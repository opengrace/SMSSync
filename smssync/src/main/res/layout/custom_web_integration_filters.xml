<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    <TextView
            android:id="@+id/custom_web_service_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo Web Service"
            android:gravity="center"
            android:padding="@dimen/view_spacing_large"
            android:drawablePadding="@dimen/view_spacing_large"
            android:textColor="@android:color/black"
            android:drawableStart="@drawable/ic_web_grey_900_24dp"
            android:drawableLeft="@drawable/ic_web_grey_900_24dp"/>
    <android.support.v7.widget.SwitchCompat android:id="@+id/custom_filter_keyword_custom_switch"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/view_spacing_xlarge"
                                            android:layout_gravity="right"
                                            android:layout_alignTop="@+id/custom_web_service_filter"
                                            android:layout_alignRight="@+id/filter_keywords_custom"
                                            android:layout_alignEnd="@+id/filter_keywords_custom"/>
    <org.addhen.smssync.presentation.view.ui.widget.FilterKeywords
            android:id="@+id/filter_keywords_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/view_spacing_large"
            android:paddingTop="@dimen/view_spacing_large"
            android:layout_marginLeft="73dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:keywordText="@string/keywords"
            app:keywordIcon="@drawable/ic_format_color_text_grey_900_24dp"/>
</RelativeLayout>

