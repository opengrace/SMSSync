<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:padding="@dimen/view_spacing_large"
                                                     android:text="@string/filter_prompt"/>
        <LinearLayout
                android:id="@+id/keyword_filters_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <org.addhen.smssync.presentation.view.ui.widget.CustomFilterKeywords
                    android:id="@+id/twitter_filter_keywords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            <org.addhen.smssync.presentation.view.ui.widget.CustomFilterKeywords
                    android:id="@+id/custom_filter_keywords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/view_spacing_large"
                android:layout_marginBottom="@dimen/view_spacing_large"
                android:background="@android:color/darker_gray"/>
        <RadioGroup android:id="@+id/login_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:tag="Reset"
                    android:paddingLeft="@dimen/view_spacing_large"
                    android:paddingStart="@dimen/view_spacing_large"
                    android:layout_marginTop="@dimen/view_spacing_normal">
            <RadioButton android:id="@+id/radio_btn_apply_unique_filters"
                         android:text="@string/apply_unique_filters"
                         android:paddingLeft="@dimen/view_spacing_normal"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/radio_btn_apply_filters_to_all"
                         android:text="@string/apply_filters_to_all"
                         android:paddingLeft="@dimen/view_spacing_normal"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
            <LinearLayout android:id="@+id/global_filters_container"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="42dp"
                          android:orientation="vertical">
                <include layout="@layout/include_filters_layout"/>
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>