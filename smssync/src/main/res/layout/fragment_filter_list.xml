<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:padding="@dimen/view_spacing_large"
                                                     android:text="@string/filter_prompt"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/view_spacing_large"
                            android:paddingLeft="@dimen/view_spacing_large">
                <TextView
                        android:id="@+id/integration_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/twitter"
                        android:gravity="center"
                        android:drawablePadding="@dimen/view_spacing_large"
                        android:textColor="@android:color/black"
                        android:drawableStart="@drawable/ic_twitter_blue_36dp"
                        android:drawableLeft="@drawable/ic_twitter_blue_36dp"/>
                <android.support.v7.widget.SwitchCompat android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="right"
                                                        android:layout_centerVertical="true"
                                                        android:layout_alignParentRight="true"
                                                        android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="73dp"
                          android:orientation="vertical">
                <include layout="@layout/keywords"/>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/view_spacing_large">
                <TextView
                        android:id="@+id/custom_web_service_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Demo Web Service"
                        android:gravity="center"
                        android:drawablePadding="@dimen/view_spacing_large"
                        android:textColor="@android:color/black"
                        android:drawableStart="@drawable/ic_web_grey_900_36dp"
                        android:drawableLeft="@drawable/ic_web_grey_900_36dp"/>
                <android.support.v7.widget.SwitchCompat android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:layout_gravity="right"
                                                        android:layout_centerVertical="true"
                                                        android:layout_alignParentRight="true"
                                                        android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="73dp"
                          android:orientation="vertical">
                <include layout="@layout/keywords"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/view_spacing_large"
                android:layout_marginBottom="@dimen/view_spacing_large"
                android:background="@android:color/darker_gray"/>
        <RadioGroup
                android:id="@+id/login_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/view_spacing_large"
                android:paddingStart="@dimen/view_spacing_large"
                android:layout_marginTop="@dimen/view_spacing_normal">
            <RadioButton
                    android:id="@+id/radio_btn_apply_unique_filters"
                    android:text="@string/apply_unique_filters"
                    android:paddingLeft="@dimen/view_spacing_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/radio_btn_apply_filters_to_all"
                    android:text="@string/apply_filters_to_all"
                    android:paddingLeft="@dimen/view_spacing_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="42dp"
                          android:orientation="vertical">
                <include layout="@layout/include_filters_layout"/>
            </LinearLayout>
        </RadioGroup>
        <CheckBox
                android:id="@+id/enable_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/enable_whitelist"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

            <com.addhen.android.raiburari.presentation.ui.widget.BloatedRecyclerView
                    android:id="@id/android:list"
                    app:recyclerviewClipToPadding="true"
                    app:recyclerviewScrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:recyclerviewEmptyView="@layout/list_empty_view"
                    />
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>