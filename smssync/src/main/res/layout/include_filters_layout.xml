<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/integration_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keywords"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/view_spacing_xlarge"
                android:drawablePadding="@dimen/view_spacing_xlarge"
                android:drawableStart="@drawable/ic_format_color_text_grey_900_24dp"
                android:drawableLeft="@drawable/ic_format_color_text_grey_900_24dp"/>

        <TextView
                android:id="@+id/integration_web_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:drawablePadding="@dimen/view_spacing_large"
                android:drawableEnd="@drawable/ic_chevron_right_grey_900_24dp"
                android:drawableRight="@drawable/ic_chevron_right_grey_900_24dp"
                android:layout_weight="0.01"
                android:layout_alignTop="@+id/integration_twitter"
                android:paddingRight="@dimen/view_spacing_large"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/view_spacing_large"
            android:layout_marginBottom="@dimen/view_spacing_large"
            android:background="@android:color/darker_gray"/>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/filter_phone_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_numbers"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:drawablePadding="@dimen/view_spacing_xlarge"
                android:drawableStart="@drawable/ic_call_grey_900_24dp"
                android:drawableLeft="@drawable/ic_call_grey_900_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        <TextView
                android:id="@+id/filter_keywords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:drawablePadding="@dimen/view_spacing_large"
                android:drawableEnd="@drawable/ic_chevron_right_grey_900_24dp"
                android:drawableRight="@drawable/ic_chevron_right_grey_900_24dp"
                android:layout_weight="0.01"
                android:paddingRight="@dimen/view_spacing_large"
                android:layout_alignTop="@+id/filter_phone_number"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>